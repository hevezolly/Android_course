<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/_search_im"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/filter_text"
        android:src="@drawable/search_icon"/>

    <EditText
        android:layout_width="0dp"
        android:id="@+id/filter_text"
        android:layout_height="45dp"
        android:textSize="25sp"
        android:paddingStart="10dp"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/_search_im"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/_priority_text"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:text="Priority:"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/filter_button_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_text" />

    <Button
        android:id="@+id/filter_button_up"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="#00000000"
        android:drawableTop="@drawable/arrow_up"
        app:layout_constraintEnd_toStartOf="@+id/filter_button_down"
        app:layout_constraintTop_toTopOf="@id/_priority_text" />

    <Button
        android:id="@+id/filter_button_clear"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:text="clear"
        android:textSize="20sp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_priority_text" />

    <Button
        android:id="@+id/filter_button_down"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="75dp"
        android:background="#00000000"
        android:drawableTop="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/_priority_text" />

</androidx.constraintlayout.widget.ConstraintLayout>